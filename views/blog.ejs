<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head') %>
    <title><%= blog.title %></title>
    <style>
      .blog-container {
        max-width: 800px;
        margin: auto;
        padding: 20px;
        background: #fff;
        border-radius: 10px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
      }
      .blog-image {
        width: 100%;
        max-height: 400px;
        object-fit: cover;
        border-radius: 8px;
        margin-bottom: 15px;
      }
      .blog-content {
        font-size: 18px;
        line-height: 1.6;
        white-space: pre-wrap;
      }
      .author-section {
        display: flex;
        align-items: center;
        gap: 10px;
        margin-bottom: 20px;
      }
      .author-img {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        object-fit: cover;
        border: 2px solid #ddd;
      }
      .comment-box {
        margin-top: 20px;
        padding: 15px;
        background: #f9f9f9;
        border-radius: 8px;
      }
      .comment {
        display: flex;
        align-items: center;
        gap: 10px;
        padding: 10px;
        border-bottom: 1px solid #ddd;
      }
      .comment img {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        object-fit: cover;
      }
    </style>
  </head>
  <body>
    <%- include('./partials/nav') %>

    <div class="container mt-4">
      <div class="blog-container">
        <h1 class="text-center"><%= blog.title %></h1>

        <% if (blog.coverImageURL) { %>
        <img src="<%= blog.coverImageURL %>" alt="Blog Cover" class="blog-image" />
        <% } %>

        <div class="author-section">
          <img 
            src="<%= blog.createdBy?.profileImageURL || '/uploads/default-profile.jpg' %>" 
            class="author-img" 
            alt="Author Image" 
          />
          <div>
            <strong><%= blog.createdBy?.fullName || "Anonymous" %></strong><br />
            <small class="text-muted"><%= new Date(blog.createdAt).toDateString() %></small>
          </div>
        </div>

        <p class="blog-content"><%= blog.body %></p>

        <div class="text-center mt-4">
          <a href="/" class="btn btn-secondary">‚Üê Back to Home</a>
        </div>
      </div>
    </div>

    <!-- Comments Section -->
    <div class="container mt-4">
      <h2>Comments (<%- comments.length %>)</h2>

      <!-- Comment Form -->
      <% if (user) { %>
      <form action="/blog/comment/<%= blog._id %>" method="POST" class="comment-box">
        <div class="mb-3">
          <label for="content" class="form-label">Write a comment:</label>
          <textarea class="form-control" id="content" name="content" rows="3" required></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Post Comment</button>
      </form>
      <% } else { %>
      <p class="text-muted">You must be logged in to post a comment.</p>
      <% } %>

      <!-- Display Comments -->
      <div class="mt-3">
        <% if (comments.length > 0) { %>
        <% comments.forEach(comment => { %>
        <div class="comment">
          <img 
            src="<%= comment.createdBy?.profileImageURL || '/uploads/default-profile.jpg' %>" 
            alt="User Image" 
          />
          <div>
            <strong><%= comment.createdBy?.fullName || "Anonymous" %></strong><br />
            <small class="text-muted"><%= new Date(comment.createdAt).toLocaleString() %></small>
            <p><%= comment.content %></p>
          </div>
        </div>
        <% }); %>
        <% } else { %>
        <p class="text-muted">No comments yet. Be the first to comment!</p>
        <% } %>
      </div>
    </div>

    <%- include('./partials/script') %>
  </body>
</html>
